{
  "name": "hugo-theme-stolnic-store",
  "version": "1.0.0",
  "description": "A Hugo store theme",
  "author": "Andrei Mustață <andrei.mustata@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:postcss && npm run build:js",
    "build:css": "sass assets/scss/stolnic.scss assets/css/stolnic.css",
    "build:postcss": "postcss assets/css/stolnic.css -o assets/css/stolnic.css",
    "build:js": "tsc",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run check"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/node": "^10.0.3",
    "@types/systemjs": "^6.1.0",
    "bulma": "^0.8.1",
    "gts": "^2.0.0",
    "postcss-cli": "^7.1.0",
    "purgecss": "^2.1.2",
    "sass": "^1.26.3",
    "typescript": "^3.8.3"
  }
}
