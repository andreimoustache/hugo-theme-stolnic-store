<div class="card-header">
  <div class="card-header-title">Cart</div>
</div>
<div class="card-content">
  <div class="content">
    {{#lines.length}}
    <ul class="cart-content">
    {{#lines}}
      <li>
        {{quantity}} x {{name}} ... {{price}}
      </li>
    {{/lines}}
    </ul>
    {{/lines.length}}
    <hr>
    <strong>Total: </strong>
    <span class="total is-pulled-right">{{totalPrice}}</span>
  </div>
</div>
